{
  "name": "foosball-rating",
  "version": "0.0.1",
  "description": "",
  "author": "Platon Efimov",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test-tc": "jest --coverage --testResultsProcessor=jest-teamcity-reporter",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test-tc:e2e": "jest --config ./test/jest-e2e.json --testResultsProcessor=jest-teamcity-reporter",
    "typeorm": "node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.7",
    "@nestjs/core": "^6.11.7",
    "@nestjs/platform-express": "^6.11.7",
    "@nestjs/typeorm": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.18.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.11.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "4.17.2",
    "@types/jest": "25.1.2",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/node": "13.7.1",
    "@types/supertest": "2.0.8",
    "husky": "^4.2.3",
    "jest": "25.1.0",
    "jest-teamcity-reporter": "^0.9.0",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "tsc-watch": "4.1.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.0.0",
    "typescript": "3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**"
    ],
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
